<%- layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Main Card -->
            <div class="card shadow-lg" style="border-radius: 15px; overflow: hidden; border: none;">
                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px; text-align: center; color: white;">
                    <div style="font-size: 3rem; margin-bottom: 15px;">ðŸŽ‰</div>
                    <h2 class="card-title mb-2" style="color: white;">Join EcoMart</h2>
                    <p style="margin: 0; opacity: 0.9;">Create your account and start shopping today!</p>
                </div>
                
                <div class="card-body p-5">
                    <form action="/signup" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label fw-bold">Username</label>
                            <div class="input-group">
                                <span class="input-group-text" style="border: 2px solid #e0e0e0; background: white;">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input type="text" 
                                       class="form-control" 
                                       id="username" 
                                       name="username" 
                                       placeholder="Choose a unique username"
                                       style="border: 2px solid #e0e0e0; border-left: none;"
                                       required>
                            </div>
                            <small class="text-muted">At least 3 characters</small>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label fw-bold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text" style="border: 2px solid #e0e0e0; background: white;">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="email" 
                                       class="form-control" 
                                       id="email" 
                                       name="email" 
                                       placeholder="you@example.com"
                                       style="border: 2px solid #e0e0e0; border-left: none;"
                                       required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label fw-bold">Password</label>
                            <div class="input-group">
                                <span class="input-group-text" style="border: 2px solid #e0e0e0; background: white;">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input type="password" 
                                       class="form-control" 
                                       id="password" 
                                       name="password" 
                                       placeholder="Enter a strong password"
                                       style="border: 2px solid #e0e0e0; border-left: none;"
                                       required>
                            </div>
                            <small class="text-muted">At least 6 characters</small>
                        </div>

                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label fw-bold">Confirm Password</label>
                            <div class="input-group">
                                <span class="input-group-text" style="border: 2px solid #e0e0e0; background: white;">
                                    <i class="bi bi-shield-check"></i>
                                </span>
                                <input type="password" 
                                       class="form-control" 
                                       id="confirmPassword" 
                                       name="confirmPassword" 
                                       placeholder="Re-enter your password"
                                       style="border: 2px solid #e0e0e0; border-left: none;"
                                       required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3" style="background: linear-gradient(135deg, #667eea, #764ba2); border: none; font-weight: 600;">
                            <i class="bi bi-person-plus"></i> Create Account
                        </button>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-3">Already have an account?</p>
                        <a href="/login" class="btn btn-outline-primary btn-lg w-100" style="color: #667eea; border: 2px solid #667eea; font-weight: 600;">
                            <i class="bi bi-box-arrow-in-right"></i> Login Here
                        </a>
                    </div>
                </div>
            </div>

            <!-- Benefits Card -->
            <div class="card mt-4 shadow-sm" style="border-radius: 12px; border: none; background: linear-gradient(135deg, #e0f2f1, #b2dfdb);">
                <div class="card-body">
                    <h6 class="card-title mb-3" style="color: #00695c;">
                        <i class="bi bi-star-fill"></i> Why Join EcoMart?
                    </h6>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li class="mb-2"><i class="bi bi-check2-circle" style="color: #00897b;"></i> <small><strong>Free Shipping</strong> on all orders</small></li>
                        <li class="mb-2"><i class="bi bi-check2-circle" style="color: #00897b;"></i> <small><strong>Best Prices</strong> guaranteed</small></li>
                        <li class="mb-2"><i class="bi bi-check2-circle" style="color: #00897b;"></i> <small><strong>24/7 Support</strong> available</small></li>
                        <li><i class="bi bi-check2-circle" style="color: #00897b;"></i> <small><strong>Easy Returns</strong> within 30 days</small></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #667eea !important;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25) !important;
    }

    .input-group-text {
        color: #667eea;
        font-weight: 600;
    }

    .form-label {
        color: #333;
    }

    .btn-outline-primary {
        transition: all 0.3s;
    }

    .btn-outline-primary:hover {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white !important;
        border-color: #667eea;
        transform: translateY(-2px);
    }
</style>

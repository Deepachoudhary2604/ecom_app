<%- include('../partials/navbar') %>
<%- layout('layouts/boilerplate') %>
<%- include('../partials/flash') %>

<div class="container">
    <!-- Header Section -->
    <div class="row mb-5 align-items-center">
        <div class="col-md-8">
            <h1 class="display-3 fw-bold mb-3" style="color: #333;">
                ðŸ›’ Our Amazing Products
            </h1>
            <p class="lead" style="color: #666;">
                Discover thousands of amazing products at unbeatable prices. Shop now and save big!
            </p>
        </div>
        <div class="col-md-4 text-end">
            <% if(currentUser && currentUser.role === 'admin') { %>
                <a href="/products/new" class="btn btn-success btn-lg shadow-lg">
                    <i class="bi bi-plus-circle"></i> Add New Product
                </a>
            <% } %>
        </div>
    </div>

    <!-- Products Count -->
    <% if(products.length > 0) { %>
        <div class="alert alert-info mb-4" style="background: linear-gradient(135deg, #d1ecf1, #bee5eb); border: none; color: #0c5460;">
            <i class="bi bi-info-circle"></i> Showing <strong><%= products.length %></strong> amazing products
        </div>
    <% } %>

    <!-- No Products -->
    <% if(products.length === 0) { %>
        <div class="text-center py-5">
            <div style="font-size: 4rem; margin-bottom: 20px;">ðŸ“¦</div>
            <h3 style="color: #333; margin-bottom: 10px;">No Products Available Yet</h3>
            <p style="color: #666; font-size: 1.1rem; margin-bottom: 30px;">
                Check back soon for amazing items!
            </p>
            <% if(currentUser && currentUser.role === 'admin') { %>
                <a href="/products/new" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Add First Product
                </a>
            <% } %>
        </div>
    <% } else { %>
        <!-- Products Grid -->
        <div class="row g-4">
            <% for(let item of products){ %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card h-100 shadow-sm product-card" style="border-radius: 15px; overflow: hidden;">
                        <!-- Product Image Container -->
                        <div class="position-relative product-image-container" style="height: 280px; background: linear-gradient(135deg, #f5f7fa, #c3cfe2); overflow: hidden;">
                            <img src="<%= item.img %>" 
                                 class="card-img-top product-image w-100 h-100" 
                                 alt="<%= item.name %>" 
                                 loading="lazy"
                                 style="object-fit: cover;">
                            
                            <!-- Overlay -->
                            <div class="product-overlay position-absolute w-100 h-100 d-flex align-items-center justify-content-center" 
                                 style="background: rgba(0, 0, 0, 0.7); top: 0; left: 0; opacity: 0; transition: opacity 0.3s;">
                                <a href="/products/<%=item._id%>" class="btn btn-light btn-lg" style="box-shadow: 0 5px 15px rgba(0,0,0,0.3);">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>

                            <!-- Badge -->
                            <span class="badge bg-danger position-absolute" style="top: 10px; right: 10px; padding: 8px 12px; font-size: 0.9rem;">
                                NEW
                            </span>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column" style="padding: 20px;">
                            <h5 class="card-title fw-bold mb-2" style="color: #333; font-size: 1.2rem;">
                                <%= item.name %>
                            </h5>
                            
                            <p class="card-text text-muted small flex-grow-1 mb-3" style="color: #666;">
                                <%= item.desc %>
                            </p>

                            <!-- Price & Actions -->
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div>
                                    <h6 class="card-price text-success fw-bold" style="font-size: 1.5rem; margin: 0;">
                                        â‚¹<%= item.price.toLocaleString('en-IN') %>
                                    </h6>
                                    <small class="text-muted">Free shipping</small>
                                </div>

                                <% if(currentUser && currentUser.role === 'admin') { %>
                                    <div class="btn-group" role="group" style="gap: 5px;">
                                        <a href="/products/<%=item._id%>/edit" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="POST" action="/products/<%=item._id%>?_method=DELETE" style="display:inline;">
                                            <button class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Are you sure?')" 
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                <% } %>
                            </div>

                            <!-- Add to Cart Button -->
                            <button class="btn btn-primary w-100 mt-3" style="border-radius: 8px;">
                                <i class="bi bi-bag-plus"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% } %>
</div>

<style>
    .product-card {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .product-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15) !important;
    }

    .product-image {
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .product-overlay {
        transition: opacity 0.3s ease !important;
    }

    .product-card:hover .product-overlay {
        opacity: 1 !important;
    }

    .badge {
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .card-price {
        animation: slideInRight 0.5s ease-out;
    }

    @keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(-10px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>

